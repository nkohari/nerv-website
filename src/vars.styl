$color-names = ('red' 'pink' 'purple' 'deep-purple' 'indigo' 'blue' 'light-blue' 'cyan' 'teal' 'green' 'light-green' 'lime' 'yellow' 'amber' 'orange' 'deep-orange' 'brown' 'grey' 'blue-grey')
$color-weights = (50 100 200 300 400 500 600 700 800 900 A100 A200 A300 A400)

for $name in $color-names
  define('$' + $name, $color-table[$name][6])
  for $weight, $index in $color-weights
    define('$' + $name + '-' + $weight, $color-table[$name][$index])

lookup-color(name, weight = 500)
  lookup('$' + name + '-' + weight)

