rotate-cw($speed)
  transform-origin: 50% 50%
  animation: rotate-cw $speed infinite linear

rotate-ccw($speed)
  transform-origin: 50% 50%
  animation: rotate-ccw $speed infinite linear

bounce($speed)
  animation: bounce $speed infinite linear

pulse($speed)
  animation: pulse $speed infinite linear

simulate-italics($amount)
  transform: skew(-1 * $amount, 0deg)
