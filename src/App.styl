html, body, #root
  width: 100%
  height: 100%
  margin: 0
  padding: 0
  overflow: hidden
  background: $black
  font-family: $font

.app
  width: 100%
  height: 100%
  display: flex
  flex-direction: column
  align-items: center

h1
  font-family: $title-font
  font-size: 80px
  text-transform: uppercase
  text-align: center
  margin: 0px

h2
  font-size: 26px
  margin: 10px 0 0 0
  text-align: center

.splash
  display: flex
  height: 100vh
  align-items: center
  justify-content: center

.splash-text
  position: absolute
  color: $white

.splash-animation
  position: absolute
  display: flex
  width: 100vw
  align-items: center
  justify-content: center

  .ring0
    position: absolute
    height: 250px
    width: 250px
    fill: $red
    transform-origin: 50% 50%
    animation: spin-cw 10s infinite linear

  .ring1
    position: absolute
    height: 350px
    width: 350px
    fill: $teal
    transform-origin: 50% 50%
    animation: spin-ccw 10s infinite linear

  .ring2
    position: absolute
    height: 480px
    width: 480px
    fill: $red
    transform-origin: 50% 50%
    animation: spin-cw 10s infinite linear

  .ring3
    position: absolute
    height: 650px
    width: 650px
    fill: $teal

  .wave0
    position: absolute
    height: 400px
    width: 400px
    fill: #808080

  .circuit0
    position: absolute
    height: 250px
    width: 250px
    fill: $teal

  .circuit1
    position: absolute
    height: 250px
    width: 250px
    fill: $red

  .boxes
    position: absolute
    height: 800px
    width: 800px
    fill: $red
    transform-origin: 50% 50%
    animation: spin-ccw 20s infinite linear

@keyframes spin-cw {
  0% { transform: rotate(0deg);}
  100% { transform: rotate(360deg);}
}

@keyframes spin-ccw {
  0% { transform: rotate(0deg);}
  100% { transform: rotate(-360deg);}
}