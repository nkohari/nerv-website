.remote-control-diagram

  .connectors
    stroke: grey(700)

  text
    font-size: 1.5rem
    fill: white(0%)
    transition-property: fill
    transition-duration: 1s
    transition-timing-function: ease-in
    &.caption-0
      transition-delay: 1s
    &.caption-1
      transition-delay: 4s
    &.caption-2
      transition-delay: 7s

  &.visible
    text
      fill: white(100%)
