.splash
  position: relative
  display: flex
  width: 100vw
  height: 100vh
  overflow: hidden
  align-items: center
  justify-content: center

  .splash-animation
    position: absolute
    display: flex
    width: 100vw
    height: 100vh
    align-items: center
    justify-content: center

    .splash-animation-overlay
      position: absolute
      top: 0
      left: 0
      right: 0
      bottom: 0
      background: linear-gradient(black(0.7) 10%, transparent 40%, transparent 60%, black(0.7) 90%)

    .ring0
      position: absolute
      width: 50vw
      height: 50vh
      fill: $teal
      rotate-ccw: 60s

    .ring1
      position: absolute
      width: 70vw
      height: 70vh
      fill: $pink
      rotate-cw: 60s

    .ring2
      position: absolute
      width: 90vw
      height: 90vh
      fill: $teal
      rotate-ccw: 60s

    .reticle
      position: absolute
      width: 100vw
      height: 100vh
      fill: teal(900)

    .wave
      position: absolute
      width: 70vw
      height: 70vh

      &.wave0
        fill: $grey
        rotate-cw: 20s

      &.wave1
        fill: $grey
        rotate-cw: 30s

      &.wave2
        fill: $grey
        rotate-cw: 40s

      &.wave3
        fill: $grey
        rotate-cw: 50s

    .circuit
      position: absolute
      width: 50vw
      height: 50vh
      transition: fill .5s ease
      fill: $teal

      &.bad
        fill: $pink

    .boxes
      position: absolute
      width: 120vw
      height: 120vh
      fill: $pink
      rotate-cw: 30s

  .splash-text
    position: absolute
    width: 100vw
    height: 100vh
    display: flex
    align-items: center
    justify-content: center

    h1
      position: absolute
      font-family: $title-font
      font-weight: 700
      font-size: 16vh
      text-transform: uppercase
      text-align: center
      margin: 0px
      color: $white
      text-shadow: -5px -5px 20px $black, 5px -5px 20px $black, -5px 5px 20px $black, 5px 5px 20px $black
      simulate-italics(5deg)

    a
      display: block
      width: 100%
      position: absolute
      bottom: 0
      text-align: center
      color: $white
      text-decoration: none
      padding-top: 100px
      text-shadow: -2px -2px 10px $black, 2px -2px 10px $black, -2px 2px 10px $black, 2px 2px 10px $black
      h2
        font-size: 3.2rem
        font-weight: 100
        line-height: 1.2em
      .arrow
        margin-top: 10px
        font-size: 2.6rem
        bounce(2s)
