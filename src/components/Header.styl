.header
  z-index: 9999
  position: absolute
  top: 0
  left: 0
  right: 0
  height: 4rem
  padding: 0.5rem 5rem
  display: flex
  flex-direction: row
  align-items: center
  font-family: $title-font
  font-size: 1.6rem
  text-transform: uppercase

  &.pinned
    position: fixed
    background: $black
    animation: header-slide-down 100ms ease-in
    .logo
      visibility: visible
    .signup
      background: $white
      color: $black

  a
    color: $white
    text-decoration: none
    padding: 0.25rem 1rem
    border-radius: 5px
    margin-right: 1rem
    transition: all 250ms ease

    &:last-child
      margin-right: 0

    &:not(.logo):hover
      background: $white
      color: $black

  .logo
    flex: 1
    display: flex
    flex-direction: row
    align-items: center
    font-size: 2.4rem
    visibility: hidden
    .brain
      height: 30px
      margin-right: 10px
      fill: $white

@keyframes header-slide-down
  0% { transform: translateY(-100%); }
  100% { transform: translateY(0); }
